<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jubayer.hossen.jobrecruitingagency.HRManager.ApplicationReviewController">
    <top>
        <ToolBar>
            <Button text="Back to Dashboard" />
            <Label style="-fx-font-size: 16pt; -fx-font-weight: bold;" text="Application Review" />
        </ToolBar>
    </top>

    <center>
        <SplitPane dividerPositions="0.3" minHeight="800.0" prefWidth="600.0">

            <VBox>
                <TableView fx:id="applicationsTable">
                    <columns>
                        <TableColumn text="Candidate" />
                        <TableColumn text="Job Title" />
                        <TableColumn text="Date" />
                        <TableColumn text="Status" />
                    </columns>
                </TableView>
                <HBox spacing="10" style="-fx-padding: 10;">
                    <ComboBox fx:id="filterCombo" promptText="Filter by Status" />
                    <Button fx:id="viewDetailsBtn" text="View Details" />
                </HBox>
            </VBox>


            <VBox spacing="10" style="-fx-padding: 10;">
                <Label fx:id="candidateName" style="-fx-font-weight: bold;" />
                <Label fx:id="candidateEmail" />
                <Separator />

                <Label text="Resume:" />


                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Status:" />
                    <ComboBox fx:id="statusCombo">
                        <items>

                        </items>
                    </ComboBox>
                    <Button fx:id="updateStatusBtn" text="Update Status" />
                </HBox>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
            <Label fx:id="statusLabel" text="Ready" />
    </bottom>
</BorderPane>
