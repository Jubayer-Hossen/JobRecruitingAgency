<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import com.sun.org.apache.xpath.internal.operations.String?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jubayer.hossen.jobrecruitingagency.HRManager.ClientCommunicationController">
    <top>
        <ToolBar>
            <Button text="Dashboard" />
            <Label text="Client Communication" style="-fx-font-size: 16pt; -fx-font-weight: bold;"/>
        </ToolBar>
    </top>

    <center>
        <SplitPane dividerPositions="0.3">
            <!-- Client List -->
            <VBox>
                <Label text="Client Companies" style="-fx-font-weight: bold; -fx-padding: 10;"/>
                <TableView fx:id="clientsTable">
                    <columns>
                        <TableColumn text="Company" />
                        <TableColumn text="Contact" />
                    </columns>
                </TableView>
            </VBox>

            <!-- Communication Panel -->
            <VBox spacing="10" style="-fx-padding: 15;">
                <HBox spacing="10">
                    <Label text="Template:"/>
                    <ComboBox fx:id="templateCombo" prefWidth="250">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String>Progress Report</String>
                                <String>Candidate Profile</String>
                                <String>Interview Results</String>
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <Button text="Load Template" fx:id="loadTemplateBtn"/>
                </HBox>

                <TextArea fx:id="messageArea" prefHeight="200"/>

                <HBox spacing="10">
                    <Button text="Send Update" fx:id="sendBtn" style="-fx-font-weight: bold;"/>
                    <Button text="Save Draft"/>
                </HBox>

                <Label text="Communication History:" style="-fx-font-weight: bold;"/>
                <TableView fx:id="historyTable" prefHeight="150">
                    <columns>
                        <TableColumn text="Date" />
                        <TableColumn text="Type" />
                        <TableColumn text="Preview" />
                    </columns>
                </TableView>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
            <Label fx:id="statusLabel" text="Select a client company"/>
    </bottom>
</BorderPane>
