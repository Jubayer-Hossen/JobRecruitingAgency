<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jubayer.hossen.jobrecruitingagency.HRManager.ClientCommunicationController">
    <top>
        <ToolBar prefHeight="0.0" prefWidth="0.0">
            <Button text="Dashboard" />
            <Label style="-fx-font-size: 16pt; -fx-font-weight: bold;" text="Client Communication" />
        </ToolBar>
    </top>

    <center>
        <SplitPane dividerPositions="0.3">
            <!-- Client List -->
            <VBox>
                <Label style="-fx-font-weight: bold; -fx-padding: 10;" text="Client Companies" />
                <TableView fx:id="clientsTable">
                    <columns>
                        <TableColumn text="Company" />
                        <TableColumn text="Contact" />
                    </columns>
                </TableView>
            </VBox>

            <!-- Communication Panel -->
            <VBox spacing="10" style="-fx-padding: 15;">
                <HBox spacing="10">
                    <Label text="Template:" />
                    <ComboBox fx:id="templateCombo" prefWidth="250">
                        <items>
<!--                            <FXCollections fx:factory="observableArrayList">-->
<!--                                <string>Progress Report</string>-->
<!--                                <String>Candidate Profile</String>-->
<!--                                <String>Interview Results</String>-->
<!--                            </FXCollections>-->
                        </items>
                    </ComboBox>
                    <Button fx:id="loadTemplateBtn" text="Load Template" />
                </HBox>

                <TextArea fx:id="messageArea" prefHeight="200" />

                <HBox spacing="10">
                    <Button fx:id="sendBtn" style="-fx-font-weight: bold;" text="Send Update" />
                    <Button text="Save Draft" />
                </HBox>

                <Label style="-fx-font-weight: bold;" text="Communication History:" />
                <TableView fx:id="historyTable" prefHeight="150">
                    <columns>
                        <TableColumn text="Date" />
                        <TableColumn text="Type" />
                        <TableColumn text="Preview" />
                    </columns>
                </TableView>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <Label fx:id="statusLabel" text="Select a client company" />
    </bottom>
</BorderPane>
