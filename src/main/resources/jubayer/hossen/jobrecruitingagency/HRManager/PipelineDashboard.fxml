<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jubayer.hossen.jobrecruitingagency.HRManager.PipelineDashboardController">
    <top>
        <ToolBar>
            <Button text="Dashboard" />
            <Label style="-fx-font-size: 16pt; -fx-font-weight: bold;" text="Candidate Pipeline" />
            <Separator orientation="VERTICAL" />
            <ComboBox fx:id="jobFilter" promptText="Filter by Job" />
            <DatePicker fx:id="startDate" promptText="From Date" />
            <DatePicker fx:id="endDate" promptText="To Date" />
            <Button fx:id="filterBtn" text="Apply Filters" />
        </ToolBar>
    </top>

    <center>
        <HBox spacing="20" style="-fx-padding: 15;">
            <!-- Applied Column -->
            <VBox style="-fx-background-color: #e0e0e0; -fx-padding: 10;">
                <Label style="-fx-font-weight: bold;" text="Applied" />
                <ListView fx:id="appliedList" prefHeight="400" prefWidth="200" />
            </VBox>

            <!-- Reviewed Column -->
            <VBox style="-fx-background-color: #bbdefb; -fx-padding: 10;">
                <Label style="-fx-font-weight: bold;" text="Reviewed" />
                <ListView fx:id="reviewedList" prefHeight="400" prefWidth="200" />
            </VBox>

            <!-- Interview Column -->
            <VBox style="-fx-background-color: #fff9c4; -fx-padding: 10;">
                <Label style="-fx-font-weight: bold;" text="Interview" />
                <ListView fx:id="interviewList" prefHeight="400" prefWidth="200" />
            </VBox>

            <!-- Offer Column -->
            <VBox style="-fx-background-color: #c8e6c9; -fx-padding: 10;">
                <Label style="-fx-font-weight: bold;" text="Offer" />
                <ListView fx:id="offerList" prefHeight="400" prefWidth="200" />
            </VBox>

            <!-- Hired Column -->
            <VBox style="-fx-background-color: #a5d6a7; -fx-padding: 10;">
                <Label style="-fx-font-weight: bold;" text="Hired" />
                <ListView fx:id="hiredList" prefHeight="400" prefWidth="200" />
            </VBox>
        </HBox>
    </center>
</BorderPane>
