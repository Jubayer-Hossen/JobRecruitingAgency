<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jubayer.hossen.jobrecruitingagency.HRManager.InterviewSchedulerController">
    <top>
        <ToolBar>
            <Button text="Back" />
            <Label style="-fx-font-size: 16pt; -fx-font-weight: bold;" text="Interview Scheduler" />
        </ToolBar>
    </top>

    <center>
        <GridPane hgap="10" style="-fx-padding: 20;" vgap="10">
            <Label text="Shortlisted Candidates:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ListView fx:id="candidatesList" prefHeight="200" prefWidth="300" GridPane.columnIndex="0" GridPane.rowIndex="1" />

            <Label text="Available Interviewers:" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <ListView fx:id="interviewersList" prefHeight="200" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Select Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Select Time:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ComboBox fx:id="timeCombo" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Button fx:id="scheduleBtn" style="-fx-font-weight: bold;" text="Schedule Interview" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </center>
</BorderPane>
