<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jubayer.hossen.jobrecruitingagency.HRManager.OfferGeneratorController">
    <top>
        <ToolBar>
            <Button text="Back" />
            <Label text="Offer Generator" style="-fx-font-size: 16pt; -fx-font-weight: bold;"/>
        </ToolBar>
    </top>

    <center>
        <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
            <Label text="Candidate:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="candidateCombo" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="300"/>

            <Label text="Position:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="positionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Salary:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="salaryField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label fx:id="salaryError" style="-fx-text-fill: red;" GridPane.rowIndex="2" GridPane.columnIndex="2"/>

            <Label text="Start Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <DatePicker fx:id="startDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Benefits:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextArea fx:id="benefitsArea" GridPane.rowIndex="4" GridPane.columnIndex="1" prefHeight="100"/>

            <HBox spacing="10" GridPane.rowIndex="5" GridPane.columnIndex="1">
                <Button text="Generate Offer" fx:id="generateBtn" style="-fx-font-weight: bold;"/>
                <ProgressIndicator fx:id="approvalProgress" visible="false"/>
            </HBox>
        </GridPane>
    </center>

    <bottom>
        <StatusBar>
            <Label fx:id="statusLabel" text="Enter offer details"/>
        </StatusBar>
    </bottom>
</BorderPane>
