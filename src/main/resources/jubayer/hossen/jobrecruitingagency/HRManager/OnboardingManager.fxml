<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jubayer.hossen.jobrecruitingagency.HRManager.OnboardingController">
    <top>
        <ToolBar>
            <Button text="Back" />
            <Label style="-fx-font-size: 16pt; -fx-font-weight: bold;" text="Onboarding Manager" />
        </ToolBar>
    </top>

    <center>
        <SplitPane dividerPositions="0.3">
            <!-- New Hires List -->
            <VBox>
                <Label style="-fx-font-weight: bold; -fx-padding: 10;" text="New Hires" />
                <ListView fx:id="newHiresList" />
            </VBox>

            <!-- Onboarding Tasks -->
            <VBox spacing="10" style="-fx-padding: 15;">
                <Label fx:id="candidateName" style="-fx-font-size: 14pt;" />

                <Label style="-fx-font-weight: bold;" text="Onboarding Checklist:" />
                <CheckBox fx:id="docsCheck" text="Documentation Completed" />
                <CheckBox fx:id="orientationCheck" text="Orientation Scheduled" />
                <CheckBox fx:id="equipmentCheck" text="Equipment Delivered" />

                <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                    <Button fx:id="welcomeBtn" text="Send Welcome Package" />
                    <DatePicker fx:id="followUpDate" promptText="Set Follow-up Date" />
                    <Button fx:id="reminderBtn" text="Set Reminder" />
                </HBox>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
