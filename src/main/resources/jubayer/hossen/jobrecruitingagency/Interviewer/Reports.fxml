<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jubayer.hossen.jobrecruitingagency.Interviewer.Reports">

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Interview Reports" />

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-min-width: 100px;" text="Report Type:" />
        <ComboBox fx:id="reportTypeComboBox" style="-fx-min-width: 150px;" />
        <Label style="-fx-min-width: 80px;" text="Date Range:" />
        <DatePicker fx:id="startDatePicker" style="-fx-min-width: 120px;" />
        <Label text="to" />
        <DatePicker fx:id="endDatePicker" style="-fx-min-width: 120px;" />
        <Button onAction="#handleGenerateReport" text="Generate Report" />
    </HBox>

    <TableView fx:id="detailedReportTable" prefHeight="600.0" prefWidth="800.0" style="-fx-pref-height: 200px;">
        <columns>
            <TableColumn fx:id="metricColumn" text="Metric">
                <cellValueFactory>
                    <PropertyValueFactory property="metric" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="valueColumn" text="Value">
                <cellValueFactory>
                    <PropertyValueFactory property="value" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button onAction="#handleExportToPDF" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Export to PDF" />
        <Button onAction="#handleExportToCSV" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Export to CSV" />
    </HBox>
</VBox>
