<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jubayer.hossen.jobrecruitingagency.Interviewer.InterviewCalendar">
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Interview Calendar" />

    <!-- Filter Controls -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-min-width: 60px;" text="Filter:" />
        <ComboBox fx:id="filterComboBox" style="-fx-min-width: 150px;" />
        <Label style="-fx-min-width: 80px;" text="Date Range:" />
        <DatePicker fx:id="dateRangePicker" style="-fx-min-width: 120px;" />
        <Button onAction="#handleApplyFilter" text="Apply Filter" />
    </HBox>

    <!-- Interview Table -->
    <TableView fx:id="interviewTableView" prefHeight="600.0" prefWidth="800.0" style="-fx-max-height: 300px;">
        <columns>
            <TableColumn prefWidth="150" text="Candidate">
                <cellValueFactory><PropertyValueFactory property="candidateName" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="150" text="Interviewer">
                <cellValueFactory><PropertyValueFactory property="interviewerName" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="150" text="Job Title">
                <cellValueFactory><PropertyValueFactory property="jobTitle" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="180" text="Date/Time">
                <cellValueFactory><PropertyValueFactory property="interviewTime" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100" text="Type">
                <cellValueFactory><PropertyValueFactory property="interviewType" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100" text="Status">
                <cellValueFactory><PropertyValueFactory property="status" /></cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <!-- Action Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="cancelInterviewButton" disable="true" onAction="#handleCancelInterview" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Cancel Interview" />
        <Button fx:id="rescheduleInterviewButton" disable="true" onAction="#handleRescheduleInterview" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Reschedule Interview" />
    </HBox>

    <!-- Statistics Chart -->
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 0 0 0;" text="Interview Statistics" />
</VBox>
