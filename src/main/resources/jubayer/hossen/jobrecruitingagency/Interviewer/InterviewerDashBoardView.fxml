<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="jubayer.hossen.jobrecruitingagency.Interviewer.InterviewerDashBoardController"
            prefHeight="600.0" prefWidth="800.0">

    <VBox spacing="15"
          AnchorPane.topAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.bottomAnchor="0.0">

        <!-- Use either approach for padding -->
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Title -->
        <Label text="Interviewer Dashboard"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <!-- Schedule Interview Section -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Schedule Interview:" />
            <ComboBox fx:id="candidateDropdown"
                      promptText="Select Candidate"
                      prefWidth="200"/>
            <DatePicker fx:id="interviewDate"/>
            <TextField fx:id="interviewTime"
                       promptText="Time (e.g., 10:00 AM)"
                       prefWidth="150"/>
            <Button text="Schedule"
                    fx:id="btnSchedule"/>
        </HBox>

        <!-- Upcoming Interviews Table -->
        <Label text="Upcoming Interviews:"
               style="-fx-font-size: 16px;" />
        <TableView fx:id="interviewTable"
                   prefHeight="200">
            <columns>
                <TableColumn fx:id="colCandidate"
                             text="Candidate"
                             prefWidth="150"/>
                <TableColumn fx:id="colDate"
                             text="Date"
                             prefWidth="100"/>
                <TableColumn fx:id="colTime"
                             text="Time"
                             prefWidth="100"/>
                <TableColumn fx:id="colStatus"
                             text="Status"
                             prefWidth="100"/>
                <TableColumn fx:id="colAction"
                             text="Action"
                             prefWidth="100"/>
            </columns>
        </TableView>

        <!-- Feedback Section -->
        <Label text="Submit Feedback:"
               style="-fx-font-size: 16px;" />
        <TextArea fx:id="feedbackTextArea"
                  prefHeight="100"
                  wrapText="true"
                  promptText="Write feedback here..."/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ComboBox fx:id="feedbackOutcome"
                      promptText="Select Outcome"
                      prefWidth="200">
                <items>
                    <FXCollections fx:factory="observableArrayList">
<!--                        <String>Shortlisted</String>-->
<!--                        <String>Rejected</String>-->
<!--                        <String>Hold</String>-->
                    </FXCollections>
                </items>
            </ComboBox>
            <Button text="Submit Feedback"
                    fx:id="btnSubmitFeedback"/>
        </HBox>

        <!-- Reports -->
        <Separator/>
        <Button text="Generate Interview Summary Report"
                fx:id="btnGenerateReport"/>
    </VBox>
</AnchorPane>