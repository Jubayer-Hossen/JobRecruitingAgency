<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jubayer.hossen.jobrecruitingagency.Interviewer.InterviewScheduleController">
    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Schedule New Interview" />

    <HBox spacing="10">
        <Label style="-fx-min-width: 120;" text="Select Candidate:" />
        <ComboBox fx:id="candidateComboBox" style="-fx-min-width: 200;" />
    </HBox>

    <HBox spacing="10">
        <Label style="-fx-min-width: 120;" text="Interview Date:" />
        <DatePicker fx:id="interviewDatePicker" style="-fx-min-width: 200;" />
    </HBox>

    <HBox spacing="10">
        <Label style="-fx-min-width: 120;" text="Interview Time:" />
        <ComboBox fx:id="timeSlotComboBox" style="-fx-min-width: 200;" />
    </HBox>

    <HBox prefHeight="600.0" prefWidth="800.0" spacing="10">
        <Label style="-fx-min-width: 120;" text="Interview Type:" />
        <ComboBox fx:id="interviewTypeComboBox" style="-fx-min-width: 200;" />
    </HBox>

    <Button onAction="#handleScheduleInterview" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-min-width: 200;" text="Schedule Interview" />

    <Label fx:id="statusLabel" style="-fx-text-fill: #ff0000;" />
</VBox>
