<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jubayer.hossen.jobrecruitingagency.Interviewer.FeedbackSubmission">
    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Submit Interview Feedback" />

    <HBox spacing="10">
        <Label style="-fx-min-width: 120;" text="Candidate:" />
        <Label fx:id="candidateNameLabel" style="-fx-font-weight: bold;" />
    </HBox>

    <HBox spacing="10">
        <Label style="-fx-min-width: 120;" text="Interview Date:" />
        <Label fx:id="interviewDateLabel" />
    </HBox>

    <Label style="-fx-font-weight: bold; -fx-padding: 5 0 0 0;" text="Technical Skills:" />
   <TextField fx:id="technicalSkillTextField" promptText="1-10" />

    <Label style="-fx-font-weight: bold; -fx-padding: 5 0 0 0;" text="Communication:" />
   <TextField promptText="1-10" />

    <Label style="-fx-font-weight: bold; -fx-padding: 5 0 0 0;" text="Cultural Fit:" />
   <TextField promptText="1-10" />

    <Label style="-fx-font-weight: bold; -fx-padding: 5 0 0 0;" text="Overall Recommendation:" />
    <ComboBox fx:id="recommendationComboBox" style="-fx-min-width: 200;" />

    <Label style="-fx-font-weight: bold; -fx-padding: 5 0 0 0;" text="Additional Comments:" />
    <TextArea fx:id="commentsTextArea" style="-fx-min-height: 100;" />

    <Button onAction="#handleSubmitFeedback" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-min-width: 200;" text="Submit Feedback" />

    <Label fx:id="statusLabel" style="-fx-text-fill: #ff0000;" />
</VBox>
